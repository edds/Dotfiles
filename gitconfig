[user]
  email = e@e26.co.uk
	name = Edd Sowden
[format]
  pretty = [%h] %s%d - %an - %ad
[log]
  date = relative
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = blue
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = tracking
[alias]
  ignore = update-index --assume-unchanged
  ignored = !git ls-files -v | grep ^[a-z]
  s = status -s
  hist = log --all --graph
[core]
  excludesfile = ~/.gitignore
  editor = vim
[diff]
  tool = opendiff
  guitool = opendiff
